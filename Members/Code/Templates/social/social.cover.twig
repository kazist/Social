
<div class="social-cover">
    <a class="edit-image"><i class="fa fa-camera"></i> Edit Cover</a>
    <img src="{{ resized_image(member.image.cover) }}"/>
</div>

<div class="social-avatar-section">
    <div class="social-avatar col-md-3">
        <a class="edit-image"><i class="fa fa-camera"></i> Edit Avatar</a>
        <img src="{{ resized_image(member.image.avatar,150,150) }}" alt="{{ blog.title }}" title="{{ blog.title }}"/>
    </div>
    <div class="social-name col-md-9">
        <h1> {{ member.name }} </h1>
        <div class="social-view-share">
            <a><i class="fa fa-eye"></i> Views </a>  &nbsp; &nbsp;
            <a><i class="fa fa-share"></i> Share </a>
        </div>
    </div>
    <div class="clr"></div>
</div>  