<div class="social-body">
    <div class="col-md-3 social-left">
        {{ include('social.summary.twig') }}
    </div>
    <div class="social-videolist col-md-9">

        {% if videolist|length>0 %}
            {% for video in videolist %}
                <div class="col-md-6">
                    <div class="social-video">
                        {{ include('social.posts.content.video.twig') }}
                    </div>
                </div>
            {% endfor %}
            
    {% else %}
        <div class="no_posts_found">
            No Videos Found.
        </div>
        {% endif %}
    </div>
</div>