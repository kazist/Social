{% if video.type=='file' %}
    <video  style="width:100%; height: 300px;" controls>
        <source src="{{ video.media_file }}" type="video/mp4">
        Your browser does not support the video tag.
    </video>
{% elseif video.type=='youtube' %}
    <iframe style="width:100%; height: 300px;"
            src="http://www.youtube.com/embed/{{ video.youtube_code }}">
    </iframe>
{% elseif video.type=='youtube' %}
    {{ video.embed_code|raw }}
{% endif %}

